<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/itemku"
    android:padding="16dp"
    android:layout_margin="8dp"
    android:gravity="center_vertical">

    <!-- Kontainer Data (2x3 baris) -->
    <LinearLayout
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:orientation="vertical">

    <!-- Bagian Atas (Kode, Nama, Merk) -->
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="25dp"
    android:background="@drawable/tablehead"
    android:orientation="horizontal">

    <!-- Kolom Kode -->
    <TextView
        android:layout_width="0dp"
        android:layout_height="25dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="Kode"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="13sp" />

    <!-- Kolom Nama -->
    <TextView
        android:layout_width="0dp"
        android:layout_height="25dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="Nama"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="13sp" />

    <!-- Kolom Merk -->
    <TextView
        android:layout_width="0dp"
        android:layout_height="25dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="Merk"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="13sp" />
</LinearLayout>

<!-- Bagian Isi Kode, Nama, Merk -->
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="25dp"
    android:background="@drawable/tablefil"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tvkodeBarang"
        android:layout_width="0dp"
        android:layout_height="25dp"
        android:layout_weight="1"
        android:gravity="center"
        android:textColor="@color/navy"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tvnamaBarang"
        android:layout_width="0dp"
        android:layout_height="25dp"
        android:layout_weight="1"
        android:gravity="center"
        android:textColor="@color/navy"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/tvMerk"
        android:layout_width="0dp"
        android:layout_height="25dp"
        android:layout_weight="1"
        android:gravity="center"
        android:textColor="@color/navy"
        android:textSize="13sp" />
</LinearLayout>

<!-- Bagian Bawah (Type, Jumlah, Satuan) -->
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="25dp"
    android:background="@drawable/tablehead"
    android:orientation="horizontal"
    android:layout_marginTop="10dp">

    <TextView
        android:layout_width="0dp"
        android:layout_height="25dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="Type"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="13sp" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="25dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="Jumlah"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="13sp" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="25dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="Satuan"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="13sp" />
</LinearLayout>

<!-- Bagian Isi Type, Jumlah, Satuan -->
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="25dp"
    android:background="@drawable/tablefil"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tvType"
        android:layout_width="0dp"
        android:layout_height="25dp"
        android:layout_weight="1"
        android:gravity="center"
        android:textColor="@color/navy"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/tvJumlah"
        android:layout_width="0dp"
        android:layout_height="25dp"
        android:layout_weight="1"
        android:gravity="center"
        android:textColor="@color/navy"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/tvSatuan"
        android:layout_width="0dp"
        android:layout_height="25dp"
        android:layout_weight="1"
        android:gravity="center"
        android:textColor="@color/navy"
        android:textSize="13sp" />
</LinearLayout>

</LinearLayout>

    <!-- Kontainer Tombol Edit dan Delete -->
    <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_marginStart="8dp">

<androidx.appcompat.widget.AppCompatButton
    android:id="@+id/btnEdit"
    android:layout_width="80dp"
    android:layout_height="35dp"
    android:layout_marginTop="3dp"
    android:layout_marginBottom="6dp"
    android:background="@drawable/bt_edit"
    android:backgroundTint="@null"
    android:text="Edit"
    android:textStyle="bold"
    android:textColor="@android:color/white"
    android:textSize="10sp" />

<androidx.appcompat.widget.AppCompatButton
    android:id="@+id/btnDelete"
    android:layout_width="80dp"
    android:layout_height="35dp"
    android:layout_marginTop="6dp"
    android:layout_marginBottom="3dp"
    android:background="@drawable/bt_delete"
    android:backgroundTint="@null"
    android:text="Delete"
    android:textStyle="bold"
    android:textColor="@android:color/white"
    android:textSize="10sp" />
    </LinearLayout>
</LinearLayout>
